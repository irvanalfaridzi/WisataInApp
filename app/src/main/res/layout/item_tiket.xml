    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="8dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ittNamaWisata"
                android:text="Nama Wisata"
                android:textSize="24dp"
                android:textColor="#000"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/ittWilayahWisata"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ittWilayahWisata"
                android:text="Surabaya"
                android:textSize="16dp"
                android:textColor="#000"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ittNamaWisata"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ittTanggalKunjungan"
                android:text="24-12-2020"
                android:textSize="12dp"
                android:textColor="#000"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/ittNamaWisata"
                app:layout_constraintBottom_toTopOf="@id/ittJumlahTiket"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ittJumlahTiket"
                android:text="3 Tiket"
                android:textSize="12dp"
                android:textColor="#000"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="4dp"
                app:layout_constraintTop_toBottomOf="@id/ittTanggalKunjungan"
                app:layout_constraintStart_toEndOf="@id/ittNamaWisata"
                app:layout_constraintBottom_toTopOf="@id/ittTotalHarga"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ittTotalHarga"
                android:text="Rp99000"
                android:textSize="12dp"
                android:textColor="#000"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="4dp"
                app:layout_constraintTop_toBottomOf="@id/ittJumlahTiket"
                app:layout_constraintStart_toEndOf="@id/ittNamaWisata"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">"
                android:textSize="64dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>