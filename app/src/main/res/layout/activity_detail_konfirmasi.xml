<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Main.DetailKonfirmasiActivity">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/dkiGambarBukti"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bgKonfirmasi"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/colorButton"
        android:id="@+id/bgKonfirmasi"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/JudulTransaksi"
        android:text="Ref Transaksi"
        android:textColor="@color/colorPutih"
        android:textSize="12sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="@id/bgKonfirmasi"
        app:layout_constraintTop_toTopOf="@id/bgKonfirmasi"
        app:layout_constraintBottom_toTopOf="@id/dktRefTransaksi"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/dktRefTransaksi"
        android:text="r1313423r3"
        android:textColor="@color/colorPutih"
        android:textStyle="normal"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/JudulTransaksi"
        app:layout_constraintBottom_toBottomOf="@id/bgKonfirmasi"
        app:layout_constraintEnd_toStartOf="@id/dkBtnKonfirmasi"/>

    <Button
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:id="@+id/dkBtnKonfirmasi"
        android:text="Konfirmasi Tiket"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bgbelitiket"
        android:textColor="@color/colorGelap"
        app:layout_constraintEnd_toEndOf="@id/bgKonfirmasi"
        app:layout_constraintTop_toTopOf="@id/JudulTransaksi"
        app:layout_constraintBottom_toBottomOf="@id/dktRefTransaksi"/>

</android.support.constraint.ConstraintLayout>