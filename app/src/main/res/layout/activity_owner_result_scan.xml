<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Main.OwnerResultScanActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/owstDetailTiket"
        android:text="Detail Tiket"
        android:textColor="#000"
        android:textSize="32dp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/owsiGambarQRCode"
        android:layout_marginVertical="24dp"
        app:layout_constraintTop_toBottomOf="@id/owstDetailTiket"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/owstKeteranganTiket"
        android:text="Tiket Valid"
        android:textColor="#0f0"
        android:textSize="32dp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/owsiGambarQRCode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/owstRefTransaksi"
        android:text="Ref. Transaksi : "
        android:textColor="#000"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginVertical="32dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/owstKeteranganTiket"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/owstRefTransaksiKeterangan"
        android:text="My Ref"
        android:textColor="#000"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@id/owstRefTransaksi"
        app:layout_constraintTop_toTopOf="@id/owstRefTransaksi"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/owsNamaUser"
        android:text="Nama Pembeli : "
        android:textColor="#000"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/owstRefTransaksiKeterangan"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/owsNamaUserKeterangan"
        android:text="Pembeli"
        android:textColor="#000"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@id/owsNamaUser"
        app:layout_constraintTop_toTopOf="@id/owsNamaUser"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/owstTanggalTransaksi"
        android:text="Tanggal Transaksi : "
        android:textColor="#000"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/owsNamaUserKeterangan"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/owstTanggalTransaksiKeterangan"
        android:text="Waktu Beli"
        android:textColor="#000"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@id/owstTanggalTransaksi"
        app:layout_constraintTop_toTopOf="@id/owstTanggalTransaksi"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/owstNamaWisata"
        android:text="Nama Wisata : "
        android:textColor="#000"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/owstTanggalTransaksiKeterangan"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/owstNamaWisataKeterangan"
        android:text="Wisataku"
        android:textColor="#000"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@id/owstNamaWisata"
        app:layout_constraintTop_toTopOf="@id/owstNamaWisata"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/owstLokasiWisata"
        android:text="Lokasi Wisata : "
        android:textColor="#000"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/owstNamaWisataKeterangan"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/owstLokasiWisataKeterangan"
        android:text="Surabaya"
        android:textColor="#000"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@id/owstLokasiWisata"
        app:layout_constraintTop_toTopOf="@id/owstLokasiWisata"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/owstJumlahTiket"
        android:text="Jumlah Tiket : "
        android:textColor="#000"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/owstLokasiWisataKeterangan"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/owstJumlahTiketKeterangan"
        android:text="100"
        android:textColor="#000"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@id/owstJumlahTiket"
        app:layout_constraintTop_toTopOf="@id/owstJumlahTiket"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/owstTanggalPenggunaan"
        android:text="Tanggal Penggunaan : "
        android:textColor="#000"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/owstJumlahTiket"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/owstTanggalPenggunaanKeterangan"
        android:text="Tanggal Tiket"
        android:textColor="#000"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@id/owstTanggalPenggunaan"
        app:layout_constraintTop_toTopOf="@id/owstTanggalPenggunaan"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/owstTotalharga"
        android:text="Total Harga : "
        android:textColor="#000"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/owstTanggalPenggunaanKeterangan"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/owstTotalhargaKeterangan"
        android:text="Rp100000"
        android:textColor="#000"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@id/owstTotalharga"
        app:layout_constraintTop_toTopOf="@id/owstTotalharga"/>

</android.support.constraint.ConstraintLayout>