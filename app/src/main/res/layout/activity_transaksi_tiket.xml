<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Main.TransaksiTiketActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tttPilih"
        android:text="Pilih Pembayaran"
        android:textSize="16dp"
        android:textColor="#000"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvIndomaret"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/tttPilih">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/ttiIndomaret"
                android:layout_margin="16dp"
                android:background="@drawable/ic_add_a_photo_black_128dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tttIndomaret"
                android:text="Indomaret"
                android:textSize="24dp"
                android:textColor="@color/colorPrimary"
                android:layout_margin="16dp"
                app:layout_constraintStart_toEndOf="@id/ttiIndomaret"
                app:layout_constraintTop_toTopOf="@id/ttiIndomaret"
                app:layout_constraintBottom_toBottomOf="@id/ttiIndomaret"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tttHiasanIndomaret"
                android:text=">"
                android:textSize="56dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvBCA"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/cvIndomaret">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/ttiBCA"
                android:layout_margin="16dp"
                android:background="@drawable/ic_add_a_photo_black_128dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tttBCA"
                android:text="BCA"
                android:textSize="24dp"
                android:textColor="@color/colorPrimary"
                android:layout_margin="16dp"
                app:layout_constraintStart_toEndOf="@id/ttiBCA"
                app:layout_constraintTop_toTopOf="@id/ttiBCA"
                app:layout_constraintBottom_toBottomOf="@id/ttiBCA"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tttHiasanBCA"
                android:text=">"
                android:textSize="56dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvBNI"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/cvBCA">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/ttiBNI"
                android:layout_margin="16dp"
                android:background="@drawable/ic_add_a_photo_black_128dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tttBNI"
                android:text="BNI"
                android:textSize="24dp"
                android:textColor="@color/colorPrimary"
                android:layout_margin="16dp"
                app:layout_constraintStart_toEndOf="@id/ttiBNI"
                app:layout_constraintTop_toTopOf="@id/ttiBNI"
                app:layout_constraintBottom_toBottomOf="@id/ttiBNI"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tttHiasanBNI"
                android:text=">"
                android:textSize="56dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>