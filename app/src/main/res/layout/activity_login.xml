<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Login.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ltEmail"
        android:text="Email : "
        android:layout_marginTop="64dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/letEmail"
        android:hint="Masukan Email"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="@id/ltEmail"
        app:layout_constraintTop_toBottomOf="@+id/ltEmail"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ltKataSandi"
        android:text="Kata sandi : "
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/letEmail"
        app:layout_constraintTop_toBottomOf="@+id/letEmail" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/letKataSandi"
        android:hint="Masukan kata sandi"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="@id/ltKataSandi"
        app:layout_constraintTop_toBottomOf="@+id/ltKataSandi"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbtnLogin"
        android:layout_marginTop="16dp"
        android:text="Login"
        app:layout_constraintTop_toBottomOf="@id/letKataSandi"
        app:layout_constraintEnd_toEndOf="@id/letKataSandi"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbtnCrtAccount"
        android:text="CREATE ACCOUNT"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toStartOf="@id/lbtnLogin"
        app:layout_constraintTop_toBottomOf="@id/letKataSandi"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ltLupPassword"
        android:textColor="@color/colorAccent"
        android:text="Lupa Password?"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/lbtnLogin"
        app:layout_constraintEnd_toEndOf="@id/lbtnLogin"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lProgressBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>