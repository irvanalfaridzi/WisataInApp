<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Main.BayarTiketActivity">

    <TextView
        android:id="@+id/tvMetode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metode Pembayaran"
        android:textColor="@color/colorButton"
        android:textSize="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvBatas"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="0dp"
        android:background="#f5f5f5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMetode" />

    <ImageView
        android:id="@+id/bgIndo"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bgtext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBatas"/>

    <ImageView
        android:id="@+id/imgIndomaret"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/logoindomart"
        app:layout_constraintStart_toStartOf="@id/bgIndo"
        app:layout_constraintTop_toTopOf="@id/bgIndo"
        app:layout_constraintBottom_toBottomOf="@id/bgIndo"/>

    <TextView
        android:id="@+id/bttMetodePembayaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="INDOMARET"
        android:textColor="@color/colorGelap"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/imgIndomaret"
        app:layout_constraintStart_toEndOf="@id/imgIndomaret"
        app:layout_constraintTop_toTopOf="@id/imgIndomaret" />


    <Button
        android:id="@+id/btBtnBayar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bgbelitiket"
        android:textColor="@color/colorPutih"
        android:text="Beli Tiket"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bgIndo"
        app:layout_constraintEnd_toEndOf="parent"
        />

</android.support.constraint.ConstraintLayout>