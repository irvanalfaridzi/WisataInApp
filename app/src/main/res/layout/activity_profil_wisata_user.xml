<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Main.ProfilWisataUserActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/pwuiGambarWisata"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/ic_add_a_photo_black_128dp"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/pwutNamadanKotaWisata"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Stikom Surabaya, Surabaya"
                android:textColor="#000000"
                android:textSize="32dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/pwuBtnFavorite"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pwuiGambarWisata" />

            <ToggleButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/pwuBtnFavorite"
                android:textOn=" "
                android:textOff=" "
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toTopOf="@id/pwutNamadanKotaWisata"
                app:layout_constraintBottom_toBottomOf="@id/pwutNamadanKotaWisata"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/pwutDeskripsiWisata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="24dp"
                android:text="blablablablablablablablablablablablablablablablablablablablablablablablablablablablablabla"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@id/pwutNamadanKotaWisata" />

            <TextView
                android:id="@+id/pwutJamOperasional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:text="Jam Operasional : 16.00 - 17.00 "
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pwutDeskripsiWisata" />

            <TextView
                android:id="@+id/pwutCocokUntuk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:text="Cocok Untuk :"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/pwutJamOperasional" />

            <TextView
                android:id="@+id/pwutCocokUntukKeterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="4dp"
                android:text="Wisatawan OreoShake yang kelaparan dan ingin makan enak"
                android:textColor="#000000"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@id/pwutCocokUntuk" />

            <TextView
                android:id="@+id/pwutDetailLokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:text="Detail Lokasi :"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pwutCocokUntukKeterangan" />

            <Button
                android:id="@+id/pwuBtnBukaMaps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="@color/colorPrimary"
                android:text="  Buka Lewat Maps  "
                android:textColor="#ffffff"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@id/pwutDetailLokasiKeterangan"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/pwutDetailLokasi" />

            <TextView
                android:id="@+id/pwutDetailLokasiKeterangan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="4dp"
                android:text="Institut Bisnis danInformatika STIKOM Surabaya, Surabaya"
                android:textSize="16dp"
                app:layout_constraintEnd_toStartOf="@id/pwuBtnBukaMaps"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pwutDetailLokasi" />

            <TextView
                android:id="@+id/pwutHargaTiket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:text="Harga Tiket :"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pwutDetailLokasiKeterangan" />

            <Button
                android:id="@+id/pwuBtnBeliTiket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="@color/colorPrimary"
                android:text="  Pesan Tiket  "
                android:textColor="#ffffff"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@id/pwutHargaTiketKeterangan"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/pwutHargaTiket" />

            <TextView
                android:id="@+id/pwutHargaTiketKeterangan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="4dp"
                android:text="GRATIS"
                android:textSize="16dp"
                app:layout_constraintEnd_toStartOf="@id/pwuBtnBukaMaps"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pwutHargaTiket" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>